{
  "name": "simple-app",
  "productName": "Simple Test App",
  "version": "0.0.1",
  "package": "com.tezrok.simple",
  "modules": [
    {
      "name": "simpleModule",
      "type": "Spring",
      "schema": {
        "schemaName": "smpl",
        "importSchema": "./schemas/Orders.json",
        "entities": [
          {
            "name": "Order",
            "customRepository": true,
            "fields": [
              {
                "name": "id",
                "type": "Long",
                "primary": true
              },
              {
                "name": "name",
                "unique": true
              },
              {
                "name": "otherItems",
                "relation": "ManyToMany"
              },
              {
                "name": "active",
                "type": "Boolean",
                "required": true
              },
              {
                "name": "nextOrder",
                "type": "Order",
                "relation": "OneToOne"
              },
              {
                "name": "linkedOrders",
                "type": "Order",
                "relation": "ManyToMany"
              }
            ]
          },
          {
            "name": "Item",
            "customRepository": true,
            "activable": true,
            "createdAt": true,
            "updatedAt": true,
            "methods": [
              {
                "name": "findOrderOtherItemsByOrderIdAndItemTitle"
              },
              {
                "name": "findOrderItemsByItemItemsOrderIdAndItemTitle"
              }
            ],
            "fields": [
              {
                "name": "id",
                "type": "Long",
                "primary": true
              },
              {
                "name": "otherItems",
                "type": "Item",
                "relation": "ManyToMany"
              },
              {
                "name": "relatedOrders",
                "description": "Related by this item orders",
                "type": "Order",
                "relation": "ManyToMany"
              }
            ],
            "stdMethodProps" : {
              "api": "false"
            }
          },
          {
            "name": "Info",
            "fields": [
              {
                "name": "infoId",
                "description": "Entity with \"infoId\" as \"id\" (not default)",
                "type": "Long",
                "primary": true
              },
              {
                "name": "name",
                "type": "String",
                "maxLength": 100
              }
            ]
          }
        ]
      },
      "auth": {
        "type": "simple",
        "stdInit": true
      },
      "task": {
        "enable": true
      },
      "dependencies": [
        "commons-io:commons-io:2.13.0"
      ]
    }
  ]
}
