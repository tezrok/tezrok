{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Order": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "selectedItem": {
          "$ref": "#/definitions/Item",
          "description": "The item that was selected by the user"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Item"
          }
        },
        "otherItems": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Item"
          }
        }
      },
      "required": ["id", "name", "email", "category"]
    },
    "Item": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "price": {
          "type": "number"
        }
      },
      "required": ["id", "price"]
    }
  },
  "type": "object",
  "properties": {
    "orders": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Order"
      }
    }
  },
  "required": ["orders"]
}
